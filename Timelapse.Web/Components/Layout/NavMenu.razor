@using System.Globalization
@rendermode InteractiveServer

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
	    <a class="navbar-brand" href="">BNF Timelapses <br/>@DateTime.Now.ToString("yyyy-MM-dd HH:mm",new CultureInfo("da-DK"))</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="nav flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-plus-clock" aria-hidden="true"></span> Timelapses
            </NavLink>
            <NavLink class="nav-link" href="/settings" Match="NavLinkMatch.All">
                <span class="bi bi-plus-clock" aria-hidden="true"></span> Settings
            </NavLink>
            <NavLink class="nav-link" href="/info" Match="NavLinkMatch.All">
                <span class="bi bi-plus-clock" aria-hidden="true"></span> Info
            </NavLink>
            <NavLink class="nav-link" href="/image" Match="NavLinkMatch.All">
	            <span class="bi bi-plus-clock" aria-hidden="true"></span> Live image
            </NavLink>

        </div>
    </nav>
</div>



